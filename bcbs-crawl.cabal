author:              tkx68
maintainer:          kempsbenedix@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
extra-source-files:  README
cabal-version:       >=1.10

executable bcbs-crawl
  main-is:             BcbsCrawler.hs
  -- other-modules:       
  other-extensions:    OverloadedStrings
