homepage:            https://github.com/tkemps/bcbs-crawler
license:             BSD3
license-file:        LICENSE
author:              Torsten Kemps-Benedix
maintainer:          kempsbenedix@gmail.com
copyright:           Torsten Kemps-Benedix, 2014
category:            Web
build-type:          Simple
extra-source-files:  README
cabal-version:       >=1.10

executable bcbs-crawl
  main-is:             BcbsCrawler.hs
  other-modules:       Misc,Text.Poppler,Control.Monad.Crawler,Data.Crawler,Data.CrawlerParameters,Text.HTML.SimpleTable
