  hs-source-dirs:      src
  default-language:    Haskell2010
  other-extensions:    OverloadedStrings,NamedFieldPuns,DeriveDataTypeable,GADTs,GeneralizedNewtypeDeriving,MultiParamTypeClasses,QuasiQuotes,TemplateHaskell,TypeFamilies,PackageImports,TypeSynonymInstances
